{% extends 'AppBundle::admin_base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <tr>
            <th>Survey</th>
            <th>Created</th>
            <th>Published</th>
            <th>Questions</th>
            <th>Actions</th>
        </tr>
        {% for survey in surveys %}
            <tr>
                <td><a href="{{ path('question_show', {surveyId:survey.id}) }}">{{ survey.title }}</a></td>
                <td>{{ survey.created|date('Y-m-d H:i') }}</td>
                <td>{%if survey.published == 1 %}{{ "Yes" }}{% else %}{{ "No" }} {% endif %} </td>
                <td><a href="{{ path('question_create', {surveyId:survey.id}) }}"><button class="small">Add questions</button></a></td>
                <td>
                    <a href="{{ path('survey_edit', {id:survey.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true" ></span></a>
                    <a href="{{ path('survey_delete', {id:survey.id}) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true" onclick="return confirm('Are you sure?')"></span></a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

