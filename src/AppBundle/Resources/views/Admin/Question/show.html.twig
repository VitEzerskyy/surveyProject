{% extends 'AppBundle::admin_base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <tr>
            <th>Question</th>
            <th>Published</th>
            <th>Choices</th>
            <th>Actions</th>
        </tr>
        {% for question in questions %}
            <tr>
                <td>{{ question.question }}</td>
                <td>{%if question.published == 1 %}{{ "Yes" }}{% else %}{{ "No" }} {% endif %}</td>
                <td>{{ question.choices | join(' | ') }}</td>
                <td>
                    <a href=""><span class="glyphicon glyphicon-pencil" aria-hidden="true" ></span></a>
                    <a href=""><span class="glyphicon glyphicon-trash" aria-hidden="true" onclick="return confirm('Are you sure?')"></span></a>
                </td>
            </tr>
        {% endfor %}
    </table>
    <a href="{{ path('question_create', {surveyId:survey}) }}"><button class="btn btn-info">Add new question</button></a>
    <a href="{{ path('survey_show') }}"><button class="btn btn-default">Back to all surveys</button></a>
{% endblock %}

